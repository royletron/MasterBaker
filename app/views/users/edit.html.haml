.row-fluid
  .span5
    .hero-unit
      %h1 Sign up!
      %p Get involved fool.
  .span7.well
    -if @user.errors.any?
      -@user.errors.each do |msg|
        %p
          =msg
      %p Errr there is something wrong!
    =semantic_form_for @user, {:url=> user_path(@user), :method=> "put", :html => { :class => "form-horizontal"} } do |f|
      %legend
        %h1 Yo' details!
      =f.input :id, :as => :hidden
      =f.input :name, :input_html => { :class=>"input-large" }, :title=>"Name", :placeholder=>"Your real name!"
      =f.input :username, :input_html => { :class=>"input-large" }, :title=>"Nickname", :placeholder=>"You can change it later"
      =f.input :avatar
          
      .form-actions
        =submit_tag "Sign me up", :class => "btn btn-primary"
